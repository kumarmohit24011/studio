
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }
    
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }
    
    match /coupons/{couponId} {
        allow read: if true;
        allow write: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }
    
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.userId || getUserData(request.auth.uid).isAdmin == true);
      allow list: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null && getUserData(request.auth.uid).isAdmin == true;
    }
  }
}
