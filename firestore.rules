rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isUserAdmin(request.auth.uid) || isOwner(userId);
      allow write: if isOwner(userId);
      allow create: if isOwner(userId);
    }
    
    match /products/{productId} {
      allow read: if true;
      allow write: if isUserAdmin(request.auth.uid);
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isUserAdmin(request.auth.uid);
    }

    match /coupons/{couponId} {
        allow read: if true;
        allow write: if isUserAdmin(request.auth.uid);
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isUserAdmin(request.auth.uid);
    }

    match /orders/{orderId} {
      allow create: if isUserAuthenticated();
      allow read: if isUserAdmin(request.auth.uid) || resource.data.userId == request.auth.uid;
      allow update, delete: if isUserAdmin(request.auth.uid);
    }
  }
}
