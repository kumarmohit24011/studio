rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for users
    match /users/{userId} {
      // A user can only read and write to their own profile
      allow read, write: if request.auth.uid == userId;
      // Allow user creation
      allow create: if request.auth.uid != null;
    }
    
    // Rules for products
    match /products/{productId} {
      // Anyone can read published products
      allow read: if resource.data.isPublished == true;
      // Admins can create, update, delete any product
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for categories
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Admins can create, update, delete categories
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
                         && request.resource.data.name is string
                         && request.resource.data.description is string
                         && (request.resource.data.imageUrl is string || request.resource.data.imageUrl == null)
                         && (request.resource.data.isFeatured is bool || request.resource.data.isFeatured == null)
                         && (request.resource.data.order is number || request.resource.data.order == null);
                         
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for orders
    match /orders/{orderId} {
        // A user can read their own orders
        allow read: if request.auth.uid == resource.data.userId;
        // Admins can read all orders
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        // Users can create their own orders
        allow create: if request.auth.uid == request.resource.data.userId;
        // Admins can update order status
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for coupons
    match /coupons/{couponId} {
        // Allow anyone to read coupons (needed for checkout)
        allow read: if true;
        // Only admins can create, update, or delete coupons
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for site content
    match /siteContent/{contentId} {
        // Anyone can read site content
        allow read: if true;
        // Only admins can write to site content
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Rules for subscribers
    match /subscribers/{subscriberId} {
      // Allow anyone to check if an email exists and create a subscription.
      // This is secure because they can't list, update, or delete other data.
      allow get, create: if true;
    }
  }
}
