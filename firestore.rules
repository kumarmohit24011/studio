rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins (any logged in user for now) can manage products.
    // Users can read all products.
    // A user can UPDATE a product's stock if they are creating an order.
    match /products/{productId} {
      allow read: if true;
      allow create, delete, write: if request.auth != null; 
    }

    // Public read for categories, write for admins.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Public read for coupons, write for admins.
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public read for settings, write for admins
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create orders for themselves and read their own orders.
    // Admins can update any order.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null;
    }
    
    // Admins can create audit logs. No one can read/modify them from the client.
    match /auditLogs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}
