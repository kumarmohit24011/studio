
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is an admin by looking at their profile in Firestore.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // By default, allow public read access to all files, but deny writes.
    // This allows anyone to see your product images, but not upload files.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow admins to write to the 'products' folder.
    match /products/{allPaths=**} {
        allow write: if request.auth != null && isAdmin();
    }
    
    // Allow admins to write to the 'hero-images' folder for the homepage hero.
    match /hero-images/{allPaths=**} {
      allow write: if request.auth != null && isAdmin();
    }

    // Allow admins to write to the 'promo-images' folder for promotional banners.
    match /promo-images/{allPaths=**} {
      allow write: if request.auth != null && isAdmin();
    }
  }
}
