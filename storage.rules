rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all product images
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access for all homepage-related images
    match /hero-images/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    match /offer-images/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
