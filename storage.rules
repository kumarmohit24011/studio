rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images, but only authenticated users to write them.
    match /hero-images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /products/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
