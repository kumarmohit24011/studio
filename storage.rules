rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Grant write access to any authenticated user for the designated folders.
    // The application's UI (admin dashboard) is responsible for ensuring only admins can trigger uploads.
    // Public read access is maintained for displaying images on the site.
    match /{folder}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
