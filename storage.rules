rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin status by reading the user's profile from Firestore.
    // This is the correct way to check for admin privileges based on the current app structure.
    function isAdmin() {
      return exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow public read access for all files so they can be displayed on the website.
    match /{allPaths=**} {
      allow read;
    }

    // Allow admin writes to all designated image folders.
    match /products/{imageId} {
      allow write: if isAdmin();
    }
    match /category-images/{imageId} {
      allow write: if isAdmin();
    }
    match /hero-images/{imageId} {
      allow write: if isAdmin();
    }
    match /content-images/{imageId} {
      allow write: if isAdmin();
    }
  }
}
