
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow public read access to all files (for product images, hero images, etc.)
    match /{allPaths=**} {
      allow read;
      // Allow write access (create, update, delete) only to authenticated admins
      allow write: if request.auth != null && isAdmin();
    }
  }
}
