rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default to denying all access.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow public read access to all files.
    // This is necessary for anyone to see images on your website.
    match /{allPaths=**} {
      allow read;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow writes (create, update, delete) only for admin users.
    // Check user's admin status in Firestore for secure access control.
    match /products/{allPaths=**} {
      allow write: if isAdmin();
    }
    
    match /hero-images/{allPaths=**} {
      allow write: if isAdmin();
    }

    match /promo-images/{allPaths=**} {
      allow write: if isAdmin();
    }

    match /categories/{allPaths=**} {
      allow write: if isAdmin();
    }
  }
}
