rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read for all images in these folders
    match /products/{image} {
      allow read;
    }
    match /hero-images/{image} {
      allow read;
    }

    // Allow write only for authenticated users in these specific folders
    match /products/{image} {
      allow write: if request.auth != null;
    }
    match /hero-images/{image} {
      allow write: if request.auth != null;
    }
  }
}
