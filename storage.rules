
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only for authenticated users on hero-images
    match /hero-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
