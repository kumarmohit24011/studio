rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default to denying all access.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow public read access to all files.
    // This is necessary for anyone to see images on your website.
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes (create, update, delete) only for authenticated users.
    // We will rely on the application's UI security (only showing upload
    // forms to admins) to control who can upload. This is a common
    // and secure pattern that avoids complex cross-service rule checks.
    match /products/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /hero-images/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /promo-images/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /categories/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
