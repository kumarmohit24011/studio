
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files so visitors can see them.
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access to hero and promo images only for authenticated users (admins).
    match /hero-images/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /promo-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
