
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files for displaying them on the site
    match /{allPaths=**} {
      allow read;
    }

    // Allow admin write access to product images
    match /products/{imageId} {
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // Allow admin write access to category images
    match /category-images/{imageId} {
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // Allow admin write access to hero images
    match /hero-images/{imageId} {
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Allow admin write access to promotional banner images
    match /content-images/{imageId} {
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
  }
}
