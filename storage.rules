rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for images that need to be displayed on the website.
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users and only in specific folders.
    match /hero-images/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /product-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
